{
	"name": "dipi/counter",
	"d4Shortcode": "dipi_counter",
	"title": "Pixel Counter",
	"titles": "Pixel Counter",
	"category": "module",
	"attributes": {
		"module": {
			"type": "object",
			"selector": "{{selector}}",
			"default": {
				"meta": {
					"adminLabel": {
						"desktop": {"value": "Pixel Counter"}
					}
				},
				"decoration": {
					"itemSpacing": {
						"desktop": {
							"value": {
								"desktop": "0px"
							}
						}
					}
				},
				"advanced": {
					"text": {
						"text": {
							"desktop": {
								"value": {
									"color": "light"
								}
							}
						}
					}
				}
			},
			"styleProps": {
				"boxShadow": {
					"selector": "{{selector}}"
				},
				"border": {
					"selector": "{{selector}}",
					"propertySelectors": {
						"desktop": {
							"value": {
								"border-radius": "{{selector}}"
							}
						}
					}
				},
				"sizing": {
					"propertySelectors": {
						"desktop": {
							"value": {
								"margin-left": "{{selector}}.et_pb_module",
								"margin-right": "{{selector}}.et_pb_module"
							}
						}
					},
					"important": {
						"desktop": {
							"value": {
								"margin-left": true,
								"margin-right": true
							}
						}
					}
				}
			}
		},
		"counter": {
			"type": "object",
			"selector": "{{selector}} .dipi_counter_number_wrapper",
			"default": {
				"advanced": {
					"text_direction": {
						"desktop": {
							"value": "inline"
						}
					},
					"counter_type": {
						"desktop": {
							"value": "number"
						}
					},
					"count_circle_percent": {
						"desktop": {
							"value": "75"
						}
					},
					"count_to_type": {
						"desktop": {
							"value": "number"
						}
					},
					"counter_force_decimals": {
						"desktop": {
							"value": "off"
						}
					},
					"count_number_decimals": {
						"desktop": {
							"value": "2"
						}
					},
					"count_number_thousands_separator": {
						"desktop": {
							"value": ""
						}
					},
					"count_number_decimal_separator": {
						"desktop": {
							"value": ""
						}
					},
					"halfcircle_label": {
						"desktop": {
							"value": "none"
						}
					},
					"count_to_include_date": {
						"desktop": {
							"value": "off"
						}
					},
					"count_date_type": {
						"desktop": {
							"value": "days"
						}
					},
					"count_from_include_date": {
						"desktop": {
							"value": "off"
						}
					},
					"count_duration": {
						"desktop": {
							"value": "2000"
						}
					},
					"count_animation_delay": {
						"desktop": {
							"value": "0"
						}
					},
					"circle_line_cap": {
						"desktop": {
							"value": "round"
						}
					},
					"circle_rotate": {
						"desktop": {
							"value": "0"
						}
					},
					"circle_use_scale": {
						"desktop": {
							"value": "off"
						}
					},
					"circle_scale_length": {
						"desktop": {
							"value": "5"
						}
					}
				},
				"decoration": {
					"font": {
						"font": {
							"desktop": {
								"value": {
									"color": "#7ebec5",
									"lineHeight": "1em",
									"size": "5em",
									"textAlign": "center"
								}
							}
						}
					},
					"circle_bar_color": {
						"desktop": {
							"value": "#7ebec5"
						}
					},
					"circle_track_color": {
						"desktop": {
							"value": "rgba(0,0,0,0.1)"
						}
					},
					"circle_line_width": {
						"desktop": {
							"value": "5"
						}
					},
					"circle_scale_color": {
						"desktop": {
							"value": "#7ebec5"
						}
					}
				}
			}
		},
		"prefix": {
			"type": "object",
			"selector": "{{selector}} .dipi_counter_number .dipi_counter_number_prefix,{{selector}} .half_circle .dipi_label.dipi_start_label",
			"inlineEditor": "plainText",
			"attributes": {
				"class": "dipi_counter_number_prefix"
			},
			"default": {
				"decoration": {
					"font": {
						"font": {
							"desktop": {
								"value": {
									"color": "#7ebec5",
									"lineHeight": "1em",
									"size": "1em",
									"textAlign": "center"
								}
							}
						}
					}
				}
			}
		},
		"number": {
			"type": "object",
			"selector": "{{selector}} .dipi_counter_number .dipi_counter_number_number",
			"inlineEditor": "plainText",
			"default": {
				"decoration": {
					"font": {
						"font": {
							"desktop": {
								"value": {
									"color": "#7ebec5",
									"lineHeight": "1em",
									"size": "1em",
									"textAlign": "center"
								}
							}
						}
					}
				}
			}
		},
		"suffix": {
			"type": "object",
			"inlineEditor": "plainText",
			"selector": "{{selector}} .dipi_counter_number .dipi_counter_number_suffix, {{selector}} .half_circle .dipi_label.dipi_end_label",
			"attributes": {
				"class": "dipi_counter_number_suffix"
			},
			"default": {
				"decoration": {
					"font": {
						"font": {
							"desktop": {
								"value": {
									"color": "#7ebec5",
									"lineHeight": "1em",
									"size": "1em",
									"textAlign": "center"
								}
							}
						}
					}
				}
			}
		}
	},
	"customCssFields": {
		"number_before": {
			"subName": "number_before",
			"selectorSuffix": " .dipi_counter_number:before"
		},
		"number": {
			"subName": "number",
			"selectorSuffix": " .dipi_counter_number"
		},
		"number_after": {
			"subName": "number_after",
			"selectorSuffix": " .dipi_counter_number:after"
		},
		"number_prefix_before": {
			"subName": "number_prefix_before",
			"selectorSuffix": " .dipi_counter_number_prefix:before"
		},
		"number_prefix": {
			"subName": "number_prefix",
			"selectorSuffix": " .dipi_counter_number_prefix" 
		},
		"number_prefix_after": {
			"subName": "number_prefix_after",
			"selectorSuffix": " .dipi_counter_number_prefix:after"
		},
		"half_circle": {
			"subName": "half_circle",
			"selectorSuffix": " .half_circle svg.circle-container"
		},
		"number_number_before": {
			"subName": "number_number_before",
			"selectorSuffix": " .dipi_counter_number_number:before"
		},
		"number_number": {
			"subName": "number_number",
			"selectorSuffix": " .dipi_counter_number_number"
		},
		"number_number_after": {
			"subName": "number_number_after",
			"selectorSuffix": " .dipi_counter_number_number:after"
		},
		"number_suffix_before": {
			"subName": "number_suffix_before",
			"selectorSuffix": " .dipi_counter_number_suffix:before"
		},
		"number_suffix": {
			"subName": "number_suffix",
			"selectorSuffix": " .dipi_counter_number_suffix"
		},
		"number_suffix_after": {
			"subName": "number_suffix_after",
			"selectorSuffix": " .dipi_counter_number_suffix:after"
		},
		"start_label": {
			"subName": "start_label",
			"selectorSuffix": " .half_circle .dipi_label.dipi_start_label"
		},
		"end_label": {
			"subName": "end_label",
			"selectorSuffix": " .half_circle .dipi_label.dipi_end_label"
		},
		"module_hover": {
			"subName": "module_hover",
			"selectorSuffix": ":hover"
		},
		"number_module_hover": {
			"subName": "number_module_hover",
			"selectorSuffix": ":hover .dipi_counter_number"
		},
		"number_prefix_module_hover": {
			"subName": "number_prefix_module_hover",
			"selectorSuffix": ":hover .dipi_counter_number_prefix"
		},
		"number_number_module_hover": {
			"subName": "number_number_module_hover",
			"selectorSuffix": ":hover .dipi_counter_number_number"
		},
		"number_suffix_module_hover": {
			"subName": "number_suffix_module_hover",
			"selectorSuffix": ":hover .dipi_counter_number_suffix"
		}
	}
}
